#!/bin/sh

. /opt/muos/script/var/func.sh

PID_DIR="$MUOS_RUN_DIR"
mkdir -p "$PID_DIR"

STARTUP_PID="$PID_DIR/startup"

start() {
	if [ -f "$STARTUP_PID" ] && kill -0 "$(cat "$STARTUP_PID")" 2>/dev/null; then
		exit 0
	fi

	nohup "/opt/muos/script/system/startup.sh" >/dev/null 2>&1 &
	echo $! >"$STARTUP_PID"
}

stop() {
	:
}

case "$1" in
	start)
		start
		;;
	stop)
		stop
		;;
	*)
		echo "Usage: $0 {start|stop}"
		exit 1
		;;
esac

exit 0
